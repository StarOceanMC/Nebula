Date: Wed, 8 Apr 2020 15:52:50 +0800
Subject: [PATCH] Save gossip start time into nbt

---
 src/main/java/net/minecraft/server/EntityVillager.java | 3 ++-
 1 file changed, 2 insertions(+), 1 deletion(-)

diff --git a/src/main/java/net/minecraft/server/EntityVillager.java b/src/main/java/net/minecraft/server/EntityVillager.java
index bf019043..1a5f0057 100644
--- a/src/main/java/net/minecraft/server/EntityVillager.java
+++ b/src/main/java/net/minecraft/server/EntityVillager.java
@@ -443,6 +443,7 @@ public class EntityVillager extends EntityVillagerAbstract implements Reputation
         if (this.bM) {
             nbttagcompound.setBoolean("AssignProfessionWhenSpawned", true);
         }
+        nbttagcompound.setLong("GossipStartTime", this.bG); // Nebula - Save gossip start time into nbt
 
     }
 
@@ -483,7 +484,7 @@ public class EntityVillager extends EntityVillagerAbstract implements Reputation
         if (nbttagcompound.hasKey("AssignProfessionWhenSpawned")) {
             this.bM = nbttagcompound.getBoolean("AssignProfessionWhenSpawned");
         }
-
+        this.bG = nbttagcompound.getLong("GossipStartTime"); // Nebula - Save gossip start time into nbt
     }
 
     @Override
